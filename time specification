            <p class="text-[10px] text-gray-500 font-bold">EXCEL IMPORT SYSTEM</p>
        </div>
        <div id="live-clock" class="text-3xl font-black text-sky-400 tab-nums">00:00:00</div>
    </header>

    <div id="import-area" class="mb-6 bg-[#161B22] p-6 rounded-2xl border border-[#30363D]">
        <label class="block text-xs font-bold text-gray-500 mb-2 uppercase">Excelã‹ã‚‰ã‚³ãƒ”ãƒ¼ã—ã¦è²¼ã‚Šä»˜ã‘ï¼ˆDAç•ªå· / åå‰ï¼‰</label>
        <textarea id="excel-input" class="w-full h-40 bg-[#0D1117] border border-[#30363D] rounded-xl p-4 text-sm text-white focus:border-sky-500 outline-none mb-4" placeholder="DA123456	ä½è—¤ å¤ªéƒ (ã‚¨ã‚¯ã‚»ãƒ«ã®åˆ—ã‚’ãã®ã¾ã¾ã‚³ãƒ”ãƒš)"></textarea>
        
        <div class="grid grid-cols-2 gap-3 mb-4">
            <div>
                <label class="block text-[10px] text-gray-500 font-bold mb-1 uppercase text-center">ç· ã‚åˆ‡ã‚Šæ™‚é–“</label>
                <input type="time" id="default-deadline" value="21:00" class="w-full bg-[#0D1117] border border-[#30363D] rounded-lg p-3 text-white text-center font-bold">
            </div>
            <div class="flex items-end">
                <button onclick="processData()" class="w-full bg-sky-600 hover:bg-sky-500 text-white font-black py-3 rounded-lg shadow-lg transition-all active:scale-95">
                    ãƒ¢ãƒ‹ã‚¿ãƒ¼èµ·å‹• ğŸš€
                </button>
            </div>
        </div>
        <p class="text-[10px] text-gray-600 text-center italic">â€»è²¼ã‚Šä»˜ã‘ãŸãƒ‡ãƒ¼ã‚¿ã®ã‚¿ãƒ–åŒºåˆ‡ã‚Šã‚’è‡ªå‹•åˆ¤åˆ¥ã—ã¾ã™</p>
    </div>

    <div id="monitor-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4"></div>

    <script>
        let deliveries = [];

        function processData() {
            const rawText = document.getElementById('excel-input').value;
            const defaultTime = document.getElementById('default-deadline').value;
            const lines = rawText.trim().split('\n');

            deliveries = lines.map(line => {
                // ã‚¨ã‚¯ã‚»ãƒ«ç‰¹æœ‰ã®ã‚¿ãƒ–åŒºåˆ‡ã‚Šã€ã¾ãŸã¯ã‚¹ãƒšãƒ¼ã‚¹åŒºåˆ‡ã‚Šã«å¯¾å¿œ
                const parts = line.split(/\t|\s{2,}/);
                return {
                    da: parts[0] ? parts[0].trim() : "DAä¸æ˜",
                    name: parts[1] ? parts[1].trim() : "åå‰ãªã—",
                    deadline: defaultTime,
                    status: 'pending'
                };
            }).filter(item => item.da !== "DAä¸æ˜");

            if (deliveries.length > 0) {
                document.getElementById('import-area').classList.add('hidden');
                updateDisplay();
            }
        }

        function updateDisplay() {
            const grid = document.getElementById('monitor-grid');
            grid.innerHTML = '';
            const now = new Date();

            deliveries.forEach((item, index) => {
                const [h, m] = item.deadline.split(':').map(Number);
                const target = new Date();
                target.setHours(h, m, 0, 0);
                
                const diffMins = Math.floor((target - now) / 60000);
                const isUrgent = diffMins <= 30 && diffMins > 0;
                const isOver = diffMins <= 0;

                const card = document.createElement('div');
                card.className = `glass-card ${item.status === 'done' ? 'done' : ''} ${isUrgent && item.status !== 'done' ? 'urgent' : ''}`;
                card.onclick = () => {
                    deliveries[index].status = deliveries[index].status === 'done' ? 'pending' : 'done';
                    updateDisplay();
                };

                card.innerHTML = `
                    <div class="flex justify-between items-start mb-2">
                        <span class="text-[10px] font-black text-gray-500 uppercase tracking-tighter">DA ID: ${index + 1}</span>
                        <div class="text-right">
                            <p class="text-[9px] font-bold text-gray-600 uppercase">Remaining</p>
                            <p class="text-sm font-black tab-nums ${isOver ? 'text-rose-500' : isUrgent ? 'text-amber-400' : 'text-sky-400'}">
                                ${isOver ? 'DEADLINE' : diffMins + ' min'}
                            </p>
                        </div>
                    </div>
                    <div class="text-xl font-black text-white mb-1 tracking-tight">${item.da}</div>
                    <div class="flex justify-between items-center mt-3 pt-2 border-t border-white/5">
                        <span class="text-sm font-bold text-gray-400">ğŸ‘¤ ${item.name}</span>
                        <span class="text-[10px] bg-white/5 px-2 py-1 rounded text-gray-500 font-bold">${item.deadline}è¿„</span>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        function clock() {
            const now = new Date();
            document.getElementById('live-clock').innerText = now.toLocaleTimeString('ja-JP', { hour12: false });
            if (deliveries.length > 0) updateDisplay();
        }

        setInterval(clock, 30000); // 30ç§’ã”ã¨ã«æ›´æ–°
        clock();
    </script>
